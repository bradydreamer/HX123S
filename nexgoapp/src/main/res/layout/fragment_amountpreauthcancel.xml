<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:text="@string/pleaseinput_preauth_cancel_amount"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="0.00"
        android:id="@+id/textview_amount_fragment"
        android:textSize="25sp"
        android:textColor="#F04517"
        android:gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"/>
    <com.xgd.umsapp.view.InputView
        android:id="@+id/inputview_fragment"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_inputcardno_fragment"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#41F017"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="@string/input_cardnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_swipecard_fragment"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#17F084"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/swipe_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
