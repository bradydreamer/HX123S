<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settlelist"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:gravity="center"
        android:layout_marginEnd="@dimen/normal_right"
        android:text="@string/list_statistics_list"
        android:textSize="@dimen/settle_title_text_size" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView

            android:gravity="center"
            android:id="@+id/merchant_name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/merchant_name_input"
            android:textSize="@dimen/settle_normal_text_size" />

        <TextView
            android:layout_weight="1"
            android:gravity="end"
            android:id="@+id/merchantname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111111111111"
            android:layout_marginEnd="@dimen/normal_right"
            android:textSize="@dimen/settle_normal_text_size" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin">
        <TextView

            android:gravity="center"
            android:id="@+id/merchant_no"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/merchantno_input"
            android:textSize="@dimen/settle_normal_text_size" />

        <TextView
            android:layout_weight="1"
            android:gravity="end"
            android:id="@+id/merchantno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111111111111"
            android:layout_marginEnd="@dimen/normal_right"
            android:textSize="@dimen/settle_normal_text_size" />
    </TableRow>


    <TableRow
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/terminal_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/terminalno_input"
            android:textSize="@dimen/settle_normal_text_size" />

        <TextView
            android:id="@+id/terminalno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/normal_right"
            android:text="1111111111111"
            android:textSize="@dimen/settle_normal_text_size" />
    </TableRow>


    <TableRow
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/batch_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/batchno_input"
            android:textSize="@dimen/settle_normal_text_size" />

        <TextView
            android:id="@+id/batchno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/normal_right"
            android:text="1111111111111"
            android:textSize="@dimen/settle_normal_text_size" />
    </TableRow>


    <TableRow
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/trans_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trans_date"
            android:textSize="@dimen/settle_normal_text_size" />

        <!--android:textSize="@dimen/normal_text_size"-->
        <TextView
            android:id="@+id/transdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/normal_right"
            android:layout_weight="1"
            android:text="1111111111111"
            android:textSize="@dimen/settle_normal_text_size" />
    </TableRow>

    <TableRow
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/list_trans_type"
            android:textSize="@dimen/settle_normal_text_size" />

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_normal_text_size" />

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_amt"
            android:textSize="@dimen/settle_normal_text_size" />

    </TableRow>


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_top">

        <TextView
            android:textStyle="bold"
            android:id="@+id/indebit"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/list_trans_indebit"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/indebitsum"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/indebitamt"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_top">

        <TextView
            android:id="@+id/incredit"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/list_trans_incredit"

            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/increditsum"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/increditamt"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_top">

        <TextView
            android:id="@+id/oudebit"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/list_trans_outdebit"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/oudebitsum"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/oudebitamt"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_top">

        <TextView
            android:textStyle="bold"
            android:id="@+id/oucredit"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/list_trans_outcredit"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/oucreditsum"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/oucreditamt"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_top">

        <TextView
            android:textStyle="bold"
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/list_trans_total"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/totalsum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />

        <TextView
            android:id="@+id/totalamt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/list_trans_sum"
            android:textSize="@dimen/settle_small_text_size" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/normal_end">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_settle"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#cc0000"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="结算" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_marginRight="20dp"
                android:id="@+id/cancel"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/btn_settle"
                android:layout_weight="1"
                android:background="#006600"
                android:textColor="#ffffff"
                android:text="退出" />
        </TableRow>

    </TableRow>

</LinearLayout>
