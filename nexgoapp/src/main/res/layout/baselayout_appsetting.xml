<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_base_appsetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_setting_hight">
        <TextView
            android:id="@+id/tv_base_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_setting_marginLeft"
            android:text="要设置的内容"
            android:textSize="@dimen/base_setting_textSize"/>
        <ImageView
            android:id="@+id/iv_base_appsetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_setting_marginRight"/>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_alignParentBottom="true"
          android:background="#666D6E"/>
</RelativeLayout>
</FrameLayout>
