<?xml version="1.0" encoding="utf-8"?>
<!--几个设置页面的父activity的布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_setting_hight"
        android:background="#1EB7BF">

        <ImageView
            android:id="@+id/iv_back_baseactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="#ffffff"
            android:textSize="@dimen/app_titilfont_textSize"/>
        <TextView
            android:id="@+id/tv_save_appsettting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="@string/Save"
            android:textSize="20sp"
            android:textColor="@drawable/selector_font_appsetting"/>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/content_baseactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>