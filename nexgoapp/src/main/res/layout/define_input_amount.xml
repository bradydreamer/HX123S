<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_num1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:text="1"
            android:textColor="@drawable/fontselector_input"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textview_num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textColor="@drawable/fontselector_input"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textview_num3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/fontselector_input"
            android:text="3"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_num4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textColor="@drawable/fontselector_input"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textview_num5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/fontselector_input"
            android:text="5"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textview_num6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@drawable/fontselector_input"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_num7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@drawable/fontselector_input"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textview_num8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/fontselector_input"
            android:gravity="center"
            android:text="8"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textview_num9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/fontselector_input"
            android:gravity="center"
            android:text="9"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/fontselector_input"
            android:gravity="center"
            android:text="清零"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="0dp"
            android:id="@+id/textview_num0"
            android:textColor="@drawable/fontselector_input"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textview_back"
            android:layout_width="0dp"
            android:textColor="@drawable/fontselector_input"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退格"
            android:textSize="15sp"/>
    </LinearLayout>


</LinearLayout>
