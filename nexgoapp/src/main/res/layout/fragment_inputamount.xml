<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:text="@string/pleaseinput_refund_amount"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="0.00"
        android:id="@+id/textview_amount_amountpreauthfinish_fragment"
        android:textSize="25sp"
        android:textColor="#F04517"
        android:gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"/>
    <com.xgd.umsapp.view.InputView
        android:id="@+id/inputview_amountpreauthfinish_fragment"
        android:layout_marginTop="10dp"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="@string/button_confirm"
        android:textColor="@drawable/selector_font_appsetting"
        android:background="@drawable/btn_selector"
        android:layout_height="0dp"/>

</LinearLayout>
